<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MeApp.Views.AddNewPresent">
    <StackLayout Orientation="Vertical" Margin="10,10,10,10">
        <Label Text="Add new present" HorizontalOptions="Center" FontSize="25" TextColor="Black"></Label>
        <Entry Placeholder="Entry Name" x:Name="Name"/>
        <Entry Placeholder="Entry Description" x:Name="Description"/>
        <Entry Placeholder="Entry Link" x:Name="Link"/>
        <Entry Placeholder="Entry Price" x:Name="Price"/>
        <Button Text="Upload image" BackgroundColor="DimGray" TextColor="White" x:Name="uploadfile" Margin="100,0,100,0" Clicked="uploadfile_Clicked"/>
        <Button Text="Save" BackgroundColor="Green" TextColor="White" x:Name="saveButton" Margin="30,10,30,0" Clicked="postButton_Clicked"/>
</StackLayout>
</ContentPage>